{
  "name": "badge",
  "element": "button",
  "props": {
    "icon3260": {
      "type": "BOOLEAN",
      "defaultValue": true
    },
    "type": {
      "type": "VARIANT",
      "defaultValue": "Solid",
      "options": [
        "Regular",
        "Solid",
        "Outlined"
      ]
    },
    "state": {
      "type": "VARIANT",
      "defaultValue": "Neutral",
      "options": [
        "Active",
        "Neutral",
        "Negative",
        "Positive"
      ]
    }
  },
  "slots": {},
  "baseStyle": {
    "display": "flex",
    "gap": "{size.spacing.8}",
    "padding": "8px",
    "backgroundColor": "{color.bg color.info subtle}",
    "borderRadius": "{size.radius.4}"
  },
  "variants": {
    "type": {
      "Outlined": {
        "backgroundColor": "{color.bg color.primary}"
      },
      "Regular": {
        "backgroundColor": "{color.bg color.primary}"
      },
      "Solid": {
        "backgroundColor": "{color.bg color.positive subtle}"
      }
    },
    "state": {
      "Neutral": {
        "backgroundColor": "{color.bg color.primary}"
      },
      "Active": {
        "backgroundColor": "{color.bg color.primary}"
      },
      "Negative": {
        "backgroundColor": "{color.bg color.primary}"
      },
      "Positive": {
        "backgroundColor": "{color.bg color.primary}"
      }
    }
  }
}